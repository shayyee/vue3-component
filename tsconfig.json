{
  "compilerOptions": {
    "module": "ESNext", // 打包模块类型
    "declaration": false, // 默认不要生成.d.ts文件
    "noImplicitAny": true, // 不允许隐式的any类型
    "removeComments": true, // 删除注释
    "moduleResolution": "node", // 按照node的模块来解析
    "esModuleInterop": true, // 可以在 TypeScript 中使用 import 语句来导入 CommonJS 模块
    "jsx": "preserve", // 保留jsx
    "noLib": false, // 包含lib.d.ts
    "target": "es6", // 编译后的目标版本
    "sourceMap": true, // 生成map文件
    "lib": [
      // 编译过程中需要引入的库文件的列表
      "ESNext",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入
    "experimentalDecorators": true, // 启用实验性的ES装饰器
    "forceConsistentCasingInFileNames": true, // 强制在文件名中区分大小写
    "resolveJsonModule": true, // 允许导入json模块
    "strict": true, // 启用所有严格类型检查选项
    "skipLibCheck": true // 在编译过程中会跳过所有的 .d.ts 声明文件的类型检查
  },
  "exclude": [
    // 不编译的文件
    "node_modules",
    "**/__tests__",
    "dist/**"
  ]
}
