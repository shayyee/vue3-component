# http://editorconfig.org
root = true
# 对所有文件生效
[*]
# 字符集utf-8
charset = utf-8
# 缩进风格：空格
indent_style = space
# 缩进大小2
indent_size = 2
# 换行符lf
end_of_line = lf
# 是否删除行尾的空格
insert_final_newline = true
# 单行最大长度
max_line_length = 120

# 对后缀名为 md 的文件生效
[*.md]
# 是否在文件的最后插入一个空行
trim_trailing_whitespace = false
